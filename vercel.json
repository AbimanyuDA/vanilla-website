{
  "buildCommand": "npm install && npm run build && composer install",
  "installCommand": "npm install && composer install",
  "functions": {
    "public/index.php": {
      "runtime": "now-php@1.3.14"
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ]
}
