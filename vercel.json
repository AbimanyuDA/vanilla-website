{
    "version": 2,
    "buildCommand": "npm ci && npm run build && php scripts/export-static.php",
    "outputDirectory": "public",
    "routes": [
        { "src": "/build/(.*)", "dest": "/public/build/$1" },
        { "src": "/about", "dest": "/public/static/about.html" },
        { "src": "/contact", "dest": "/public/static/contact.html" },
        { "src": "/", "dest": "/public/static/index.html" }
    ]
}
