{
  "buildCommand": "npm install && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "public",
  "functions": {
    "api/index.php": {
      "runtime": "now-php@2.0.0"
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  }
}
